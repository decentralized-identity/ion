{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "ion operation create",
            "program": "${workspaceFolder}/dist/bin/index.js",
            // "args": ["operation", "create"],
            "args": ["--help"],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Sidetree Core Service",
            "program": "${workspaceFolder}/dist/src/core.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Sidetree Bitcoin Service",
            "program": "${workspaceFolder}/dist/src/bitcoin.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Sidetree IPFS Service",
            "program": "${workspaceFolder}/dist/src/ipfs.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jasmine-ts - All tests",
            "program": "${workspaceFolder}/node_modules/jasmine-ts/lib/index.js",
            "env": {
            "JASMINE_CONFIG_PATH": "${workspaceFolder}/tests/jasmine.json"
            },
            "console": "internalConsole"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jasmine-ts - Current file",
            "program": "${workspaceFolder}/node_modules/jasmine-ts/lib/index.js",
            "args": ["${file}"],
            "env": {
            "JASMINE_CONFIG_PATH": "${workspaceFolder}/tests/jasmine.json"
            },
            "console": "internalConsole"
        }
    ]
}