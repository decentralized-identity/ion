{
  "name": "ion",
  "version": "0.1.0",
  "description": "Identity Overlay Network (ION) using Sidetree protocol.",
  "repository": "https://github.com/decentralized-identity/ion",
  "license": "Apache-2.0",
  "main": "dist/src/index.js",
  "dependencies": {
    "@decentralized-identity/sidetree-core": "0.1.1",
    "koa": "2.6.2",
    "koa-router": "7.2.1",
    "raw-body": "2.3.3"
  },
  "devDependencies": {
    "@types/cls-hooked": "4.2.1",
    "@types/jasmine": "2.8.12",
    "@types/koa": "2.0.48",
    "@types/koa-router": "7.0.40",
    "@types/node": "10.12.18",
    "copyfiles": "2.1.0",
    "husky": "0.14.3",
    "jasmine": "3.3.1",
    "jasmine-reporters": "2.3.2",
    "jasmine-spec-reporter": "4.2.1",
    "jasmine-ts": "0.3.0",
    "nyc": "13.3.0",
    "ts-node": "7.0.1",
    "tslint": "5.12.0",
    "tslint-config-standard": "8.0.1",
    "typescript": "3.4.3"
  },
  "scripts": {
    "precommit": "npm run lint",
    "build": "tsc && copyfiles json/*.json dist && copyfiles tests/json/*.json dist",
    "test": "jasmine-ts --config=./tests/jasmine.json",
    "cc": "npm run build && nyc jasmine-ts --config=./tests/jasmine.json",
    "lint": "tslint --fix --project .",
    "start": "node dist/src/index.js"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**"
    ],
    "reporter": [
      "text",
      "cobertura",
      "html"
    ]
  }
}
